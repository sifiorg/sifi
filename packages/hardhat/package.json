{
  "name": "@sifi/hardhat",
  "version": "1.11.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "directory": "packages/hardhat",
    "url": "https://github.com/sideshiftfi/sifi.git"
  },
  "scripts": {
    "build": "npx hardhat compile",
    "forge-build": "forge build --build-info",
    "lint": "solhint 'contracts/**/*.sol'",
    "test": "hardhat test && forge test --ffi",
    "forge-test": "forge test --ffi -vvv",
    "slither": "slither --filter-paths='test/|node_modules/|lib/' .",
    "slither:ci": "slither --ignore-compile --filter-paths 'test/|node_modules/|lib/' --sarif results.sarif --no-fail .",
    "clean": " rm -rf cache cache_forge artifacts out typechain-types results.sarif",
    "hardhat-deploy-all": "for dir in ./deployments/*/; do network=$(basename $dir); echo $network; hardhat deploy --network $network; done"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.1",
    "@nomicfoundation/hardhat-ethers": "^3.0.4",
    "@nomicfoundation/hardhat-foundry": "^1.0.3",
    "@nomicfoundation/hardhat-toolbox": "^3.0.0",
    "@openzeppelin/contracts": "4.9.3",
    "@uniswap/v2-periphery": "1.1.0-beta.0",
    "chai": "^4.3.7",
    "dotenv": "^16.3.1",
    "hardhat": "^2.17.1",
    "hardhat-deploy": "^0.11.34",
    "p-map": "^4.0.0",
    "solhint": "^3.6.2",
    "solhint-plugin-prettier": "^0.0.5"
  }
}
